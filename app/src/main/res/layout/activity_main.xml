<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.41" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/verde"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="132dp"
        android:background="@drawable/verde"

        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rojo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rojo"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/rojo"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/verde"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/azul"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="132dp"
        android:background="@drawable/azul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/amarillo"
        app:layout_constraintTop_toBottomOf="@+id/verde" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/amarillo"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/amarillo"
        app:layout_constraintEnd_toStartOf="@+id/azul"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rojo" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="336dp"
        android:layout_height="69dp"

        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:backgroundTint="#6E27B1"
        android:text="Simon Dice"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scoreText"
        android:text="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="textEnd"
        android:textSize="36sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="sans-serif"
        android:text="Ronda"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/ronda"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="40dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginTop="337dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="200dp"
        android:background="#FFFFFF"
        android:backgroundTint="#6E27B1"
        android:text="INICIO"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>